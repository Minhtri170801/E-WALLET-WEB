<div class="login-box">
    <h2>Đăng nhập</h2>
    <form method="POST">
        <div class="user-box">
            <input type="text" id="username" name="username" value="{{username}}" required="">
            <label>Tên đăng nhập</label>
        </div>
        <div class="user-box">
            <input type="password" id="password" name="password" required="">
            <label>Mật khẩu</label>
        </div>
        <div class="alert-validable" role="alert">
            <p class="para">This is a danger alert—check it out!</p>
        </div>
        <div class="login">
            <button class="custom-btn btn-login" type="submit">
                <span>Đăng nhập</span>
            </button>
        </div>
    </form>
</div>